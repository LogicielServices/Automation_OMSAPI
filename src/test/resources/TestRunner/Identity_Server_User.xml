<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd">
<suite name="IDENTITY SERVER - USER">
  
   		  <test thread-count="1" name="User Login" >
		   <classes>
		      <class name="IdentityServer_API_User.Login">
		        <methods>
		          <include name="UserLogin"/>
		        </methods>
		      </class> <!-- IdentityServer_API_User.Login -->
		    </classes>
		  </test> <!-- Test : User Login -->
		  
		  
		  <test thread-count="1" name="Change User Password API">
		    <classes>
				<class name="IdentityServer_API_User.UserProfile_ChangePassword">
					     <methods>
				         	 <include name="Verify_UserProfile_ChangePassword"/>
				         </methods>
				</class>
			</classes>
		  </test> <!-- Test: Change User Password-->
		  
		  
		  <test thread-count="1" name="User Profile Detail API">
		    <classes>
				<class name="IdentityServer_API_User.UserProfile_Detail">
						 <methods>
				         	 <include name="Verify_UserProfile_Detail"/>
				         </methods>
				</class>
			</classes>
		  </test> <!-- Test: User Profile Detail -->
		  
		  
		  <test thread-count="1" name="Forgot Password APIs">
		    <classes>
				<class name="IdentityServer_API_User.Forgot_Password_Confirm">
					     <methods>
				         	 <include name="Verify_Forgot_Password_Confirm"/>
				         </methods>
				</class>
				<class name="IdentityServer_API_User.Forgot_Password_Verify">
						 <methods>
				         	 <include name="Forgot_Password_Verification"/>
				         </methods>
				</class>
				<class name="IdentityServer_API_User.Forgot_Password">
						 <methods>
				         	 <include name="Verify_Forgot_Password"/>
				         </methods>
				</class>
			</classes>
		  </test> <!-- Test : Forgot Password -->
		  
  
  
  
  
</suite> <!-- Suite -->
